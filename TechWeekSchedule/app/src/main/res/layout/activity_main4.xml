<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="@drawable/gradient1">

    <TextView
        android:id="@+id/tvEvent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Event Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"

        />
    <ImageView
        android:id="@+id/imgPresenter"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEvent"



        />
    <TextView
        android:id="@+id/tvActivityName"
       app:layout_constraintTop_toBottomOf="@id/imgPresenter"
        app:layout_constraintStart_toStartOf="@id/imgPresenter"
        android:text=""
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"

       />
    <TextView

        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/v_description"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvActivityName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvActivityName"
        />

    <TextView
        android:id="@+id/tvActivityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_percent="0.6"
        android:lines="90"
        app:layout_constraintLeft_toRightOf="@id/tvDescription"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDescription"


        />

    <TextView
        android:id="@+id/tvTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/v_time"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvDescription"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="................"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintLeft_toRightOf="@id/tvTime1"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvPresenter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTime1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvTime1"
        android:layout_weight="1"
        android:text="@string/v_presenter"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingBottom="20dp"

        />
    <TextView
        android:id="@+id/tvPresenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintLeft_toRightOf="@id/tvPresenter1"
        app:layout_constraintStart_toStartOf="@id/tvTime"
        android:text="................"
        android:paddingBottom="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAllCaps="false"
        android:text="@string/v_return"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPresenter1"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>